  "description": "This course covers the fundamental concepts and techniques in digital image processing and computer vision. Topics include image representation, enhancement, restoration, segmentation, feature extraction, and an introduction to deep learning for computer vision applications.",
  "prerequisites": [
    "CMSC 21 - Fundamentals of Programming",
    "CMSC 123 - Data Structures",
    "Math 23 - Linear Algebra (recommended)"
  ],
  "objectives": [
    "Understand the mathematical foundations of digital image representation",
    "Apply image enhancement and filtering techniques",
    "Implement image restoration and geometric transformation algorithms",
    "Extract features and perform image segmentation",
    "Apply deep learning techniques to computer vision problems",
    "Develop practical skills using Python, OpenCV, and deep learning frameworks"
  ],
  "modules": [
    {
      "number": 1,
      "title": "Introduction to Digital Image Processing",
      "weeks": "1",
      "topics": [
        "What is digital image processing?",
        "Image representation as 2D arrays",
        "Sampling and quantization",
        "Image types: binary, grayscale, color",
        "Color models: RGB, HSV",
        "Memory requirements"
      ]
    },
    {
      "number": 2,
      "title": "Storage and Compression",
      "weeks": "2",
      "topics": [
        "Image file formats (JPEG, PNG, BMP, TIFF)",
        "Lossless compression (Huffman, RLE, LZW)",
        "Lossy compression (DCT, JPEG)",
        "Quality vs file size trade-offs"
      ]
    },
    {
      "number": 3,
      "title": "Image Processing Fundamentals",
      "weeks": "3-4",
      "topics": [
        "Point operations and intensity transformations",
        "Histogram processing and equalization",
        "2D convolution and correlation",
        "Padding strategies",
        "Fourier Transform and frequency domain"
      ]
    },
    {
      "number": 4,
      "title": "Image Enhancement and Filtering",
      "weeks": "5",
      "topics": [
        "Noise models",
        "Spatial domain filters (mean, median, Gaussian)",
        "Frequency domain filters",
        "Edge-preserving filters (bilateral)",
        "Sharpening and unsharp masking"
      ]
    },
    {
      "number": 5,
      "title": "Image Restoration",
      "weeks": "6",
      "topics": [
        "Degradation models",
        "Point spread function (PSF)",
        "Inverse filtering",
        "Wiener filtering",
        "Richardson-Lucy deconvolution"
      ]
    },
    {
      "number": 6,
      "title": "Geometric Transformations",
      "weeks": "7",
      "topics": [
        "Translation, rotation, scaling",
        "Affine transformations",
        "Projective transformations (homography)",
        "Interpolation methods",
        "Image registration"
      ]
    },
    {
      "number": 7,
      "title": "Feature Extraction",
      "weeks": "8-9",
      "topics": [
        "Edge detection (Sobel, Canny)",
        "Corner detection (Harris)",
        "Hough transform",
        "Feature descriptors (SIFT, ORB)",
        "Feature matching"
      ]
    },
    {
      "number": 8,
      "title": "Segmentation and Morphology",
      "weeks": "10",
      "topics": [
        "Thresholding (global, Otsu, adaptive)",
        "Region-based segmentation",
        "Watershed algorithm",
        "Morphological operations",
        "Connected component analysis"
      ]
    },
    {
      "number": 9,
      "title": "Computer Vision & Deep Learning I",
      "weeks": "11-12",
      "topics": [
        "Neural network fundamentals",
        "Convolutional Neural Networks (CNNs)",
        "CNN architectures",
        "Training and optimization",
        "Transfer learning"
      ]
    },
    {
      "number": 10,
      "title": "Computer Vision & Deep Learning II",
      "weeks": "13-14",
      "topics": [
        "Image classification",
        "Object detection (YOLO, Faster R-CNN)",
        "Semantic segmentation (U-Net)",
        "Evaluation metrics (IoU, mAP)"
      ]
    },
    {
      "number": 11,
      "title": "Generative Models",
      "weeks": "15-16",
      "topics": [
        "Autoencoders",
        "Variational Autoencoders (VAE)",
        "Generative Adversarial Networks (GAN)",
        "Image-to-image translation",
        "Style transfer"
      ]
    }
  ],
